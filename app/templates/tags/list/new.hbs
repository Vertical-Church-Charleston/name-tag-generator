<section class="input-section position-absolute w-50 h-100 d-flex justify-content-center align-items-center {{if leaving 'leaving' ''}}">
  {{#link-to 'tags.list'}}
    <button class="btn btn-icon btn-lg btn-light position-absolute cursor-pointer" style="top:15px;left:15px"><i class="oi oi-chevron-left"></i></button>
  {{/link-to}}
  <form class="w-50" {{action "create" on="submit"}}>
    <div class="form-group">
      {{input type="text" autofocus="autofocus" value=model.firstName class="form-control with-shadow form-control-lg" id="first-name" placeholder="First Name"}}
    </div>
    <div class="form-group">
      {{input type="text" value=model.lastName class="form-control with-shadow form-control-lg" id="last-name" placeholder="Last Name"}}
    </div>
    {{#loading-button size="large" block=true type="submit" working=creatingTag}}Create{{/loading-button}}
  </form>
</section>
<section class="display-section position-absolute w-50 h-100 {{if leaving 'leaving' ''}}">
  <div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="col-lg-6">
        {{tag-component data=model}}
      </div>
    </div>
  </div>
</section>